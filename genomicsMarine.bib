@Article{fitzgerald2012food,
  Title                    = {Food and Heat Stress in the California Mussel: Evidence for an Energetic Trade-off Between Survival and Growth},
  Author                   = {Fitzgerald-Dehoog, Lindsay and Browning, Jeremy and Allen, Bengt J},
