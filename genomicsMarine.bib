@Article{reading2012ovary,
  Title                    = {An ovary transcriptome for all maturational stages of the striped bass (Morone saxatilis), a highly advanced perciform fish},
  Author                   = {Reading, Benjamin J and Chapman, Robert W and Schaff, Jennifer E and Scholl, Elizabeth H and Opperman, Charles H and Sullivan, Craig V},
