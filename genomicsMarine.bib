@Article{von2012new,
  Title                    = {New estimates of early post-settlement mortality for intertidal mussels show no relationship with meso-scale coastline topographic features},
  Author                   = {Von der Meden, Charles EO and Porri, Francesca and McQuaid, Christopher D},
