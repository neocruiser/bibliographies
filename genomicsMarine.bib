@Article{gallardo2013snp,
  Title                    = {{SNP} discovery and gene annotation in the surf clam \textit{Mesodesma donacium}},
  Author                   = {Gallardo-Esc{\'a}rate, Cristian and Valenzuela-Mu{\~n}oz, Valentina and N{\'u}{\~n}ez-Acu{\~n}a, Gustavo and Haye, Pilar},
