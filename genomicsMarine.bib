@Article{jacobs2014growth,
  Title                    = {Growth of juvenile blue mussels (\textit{ Mytilus edulis}) on suspended collectors in the Dutch Wadden Sea},
  Author                   = {Jacobs, P and Beauchemin, C and Riegman, R},
