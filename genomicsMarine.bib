@Article{wang2008molecular,
  Title                    = {Molecular cloning and functional analysis of cathepsin {B} in nutrient metabolism during larval development in\textit{ Meretrix meretrix}},
  Author                   = {Wang, Xiaomei and Liu, Baozhong and Wang, Guodong and Tang, Baojun and Xiang, Jianhai},
  Journal                  = {Aquaculture},
