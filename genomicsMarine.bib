@Article{zhang2013transcriptome,
  Title                    = {Transcriptome profiling and digital gene expression analysis of Nile tilapia (\textit{Oreochromis niloticus}) infected by \textit{Streptococcus agalactiae}},
  Author                   = {Zhang, Rui and Zhang, Li-li and Ye, Xing and Tian, Yuan-yuan and Sun, Cheng-fei and Lu, Mai-xin and Bai, Jun-jie},
