@Article{Zhang2013TranscriptomeGuo,
  Title                    = {Transcriptome Analysis Reveals a Rich Gene Set Related to Innate Immunity in the Eastern Oyster (\textit{Crassostrea virginica})},
  Author                   = {Zhang, Linlin and Li, Li and Zhu, Yabing and Zhang, Guofan and Guo, Ximing},
