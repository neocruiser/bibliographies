@Article{balseiro2013immune,
  Title                    = {Immune responses during the larval stages of \textit{Mytilus galloprovincialis}: metamorphosis alters immunocompetence, body shape and behavior},
  Author                   = {Balseiro, Pablo and Moreira, Rebeca and Chamorro, Rub{\'e}n and Figueras, Antonio and Novoa, Beatriz},
