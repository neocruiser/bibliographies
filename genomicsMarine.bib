@Article{basu2012induction,
  Title                    = {Induction of toll-like receptor (TLR) 2, and MyD88-dependent TLR-signaling in response to ligand stimulation and bacterial infections in the Indian major carp, mrigal (Cirrhinus mrigala)},
  Author                   = {Basu, Madhubanti and Swain, Banikalyan and Sahoo, Bikash R and Maiti, Nikhil K and Samanta, Mrinal},
