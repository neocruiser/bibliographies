@Article{wang2011primitive,
  Title                    = {A primitive {T}oll-like receptor signaling pathway in mollusk {Z}hikong scallop \textit{Chlamys farreri}},
  Author                   = {Wang, Mengqiang and Yang, Jialong and Zhou, Zhi and Qiu, Limei and Wang, Lingling and Zhang, Huan and Gao, Yang and Wang, Xingqiang and Zhang, Li and Zhao, Jianmin and others},
