@Article{meyer2009sequencing,
  Title                    = {Sequencing and de novo analysis of a coral larval transcriptome using 454 GSFlx},
  Author                   = {Meyer, Eli and Aglyamova, Galina and Wang, Shi and Buchanan-Carter, Jade and Abrego, David and Colbourne, John and Willis, Bette and Matz, Mikhail},
