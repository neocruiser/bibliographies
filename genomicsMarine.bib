@Article{kim2011trif,
  Title                    = {The {TRIF/TBK1/IRF-3} activation pathway is the primary inhibitory target of resveratrol, contributing to its broad-spectrum anti-inflammatory effects},
  Author                   = {Kim, Min Ho and Yoo, Dae Sung and Lee, Song Yi and Byeon, Se Eun and Lee, Yong Gyu and Min, Taesun and Rho, Ho Sik and Rhee, Man Hee and Lee, Jaehwi and Cho, Jae Youl},
  Journal                  = {Die Pharmazie-An International Journal of Pharmaceutical Sciences},
