@Article{rathburn2013transcriptomic,
  Title                    = {Transcriptomic responses of juvenile {Pacific} whiteleg shrimp, Litopenaeus vannamei, to hypoxia and hypercapnic hypoxia},
  Author                   = {Rathburn, Charles K and Sharp, Natasha J and Ryan, James C and Neely, Marion G and Cook, Matthew and Chapman, Robert W and Burnett, Louis E and Burnett, Karen G},
