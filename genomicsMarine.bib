@Article{xue2013l_rna_scaffolder,
  Title                    = {L\_{RNA}\_scaffolder: scaffolding genomes with transcripts},
  Author                   = {Xue, Wei and Li, Jiong-Tang and Zhu, Ya-Ping and Hou, Guang-Yuan and Kong, Xiang-Fei and Kuang, You-Yi and Sun, Xiao-Wen},
