@Article{jones2013genome,
  Title                    = {{Genome-Wide SNP} Validation and Mantle Tissue Transcriptome Analysis in the Silver-Lipped {P}earl Oyster, \textit{Pinctada maxima}},
  Author                   = {Jones, David B and Jerry, Dean R and For{\^e}t, Sylvain and Konovalov, Dmitry A and Zenger, Kyall R},
