@Article{wang2013molecular,
  Title                    = {Molecular cloning and transcriptional regulation of an allograft inflammatory factor-1 ({AIF-1}) in {Z}hikong scallop\textit{ Chlamys farreri}},
  Author                   = {Wang, Jingjing and Zhang, Huan and Wang, Lingling and Qiu, Limei and Yue, Feng and Yang, Chuanyan and Song, Linsheng},
  Journal                  = {Gene},
