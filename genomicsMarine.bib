@Article{samain2011review,
  Title                    = {Review and perspectives of physiological mechanisms underlying genetically-based resistance of the {Pacific} oyster \textit{Crassostrea gigas} to summer mortality},
  Author                   = {Samain, Jean-Fran{\c{c}}ois},
