@Article{perrigault2009identification,
  Title                    = {Identification and expression of differentially expressed genes in the hard clam, \textit{Mercenaria mercenaria}, in response to quahog parasite unknown ({QPX})},
  Author                   = {Perrigault, Mickael and Tanguy, Arnaud and Allam, Bassem},
