@Article{moreira_transcriptomics_2012,
  Title                    = {Transcriptomics of \textit{in vitro} Immune-Stimulated Hemocytes from the Manila Clam \textit{Ruditapes philippinarum} Using High-Throughput Sequencing},
  Author                   = {Moreira, Rebeca and Balseiro, Pablo and Planas, Josep V. and Fuste, Berta and Beltran, Sergi and Novoa, Beatriz and Figueras, Antonio},
  Journal                  = {{PLoS} {ONE}},
