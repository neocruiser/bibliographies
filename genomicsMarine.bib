@Article{waldbusser2013developmental,
  Title                    = {A developmental and energetic basis linking larval oyster shell formation to acidification sensitivity},
  Author                   = {Waldbusser, George G and Brunner, Elizabeth L and Haley, Brian A and Hales, Burke and Langdon, Christopher J and Prahl, Frederick G},
