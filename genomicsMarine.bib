@Article{Torres2013,
  Title                    = {N-acylhomoserine lactone-degrading bacteria isolated from hatchery bivalve larval cultures},
  Author                   = {Torres, Marta and Romero, Manuel and Prado, Susana and Dubert, Javier and Tahrioui, Ali and Otero, Ana and Llamas, Inmaculada},
